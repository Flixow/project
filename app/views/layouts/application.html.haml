!!!
%html
  %head
    %title CheckPlace
    = stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', media: 'all'
    = stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', media: 'all'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'
    = csrf_meta_tags
  %body
    = render 'layouts/admin_nav'
    .container
      .col-sm-3
        %ul.nav.nav-pills.nav-stacked
          %li
            = link_to t('admin.menu.dashboard'), admin_path
          %li 
            = link_to t('admin.menu.categories'), admin_categories_path
          %li 
            = link_to t('admin.menu.posts'), admin_posts_path
          %li
            %a{ :href=>"#" } Pages
          %li
            %a{ :href=>"#" } Users
          %li
            %a{ :href=>"#" } Tags
          %li
            %a{ :href=>"#" } Comments 
      .col-sm-9
        %ol.breadcrumb
          %li
            %a{ :href=> admin_path } Home
          = yield :breadcrumb
        = yield
      = render 'layouts/noty'