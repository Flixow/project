-if @category.errors.present?
  :javascript
    noty( {text: '#{ @category.errors.full_messages.join(', ') }' , layout: 'bottomLeft' , type: 'error'} )
= simple_form_for [:admin , @category], :html => { class: 'form-horizontal' } do |c|
  .form-group
    =c.label :name, :class => "col-sm-2 control-label"
    .col-sm-10
      = c.input_field :name, :label => false , :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = c.button :submit, :class => 'btn btn-success'