-if @group.errors.present?
  :javascript
    noty( {text: '#{ @group.errors.full_messages.join(', ') }' , layout: 'bottomLeft' , type: 'error'} )
= simple_form_for [:admin , @group], :html => { class: 'form-horizontal' } do |p|
  .form-group
    =p.label :name, :class => "col-sm-2 control-label"
    .col-sm-10
      = p.input_field :name, :label => false , :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = p.button :submit, :class => 'btn btn-success'